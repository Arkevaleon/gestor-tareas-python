        "tareas = []\n",
        "while True:\n",
        "    opcion = input(\"1. Añadir tarea\\n2. Ver tareas\\n3. Eliminar tarea\\n4. Salir\\n\")\n",
        "    if opcion == \"1\":\n",
        "        tarea = input(\"Tarea: \")\n",
        "        tareas.append(tarea)\n",
        "    elif opcion == \"2\":\n",
        "        print(tareas)\n",
        "    elif opcion == \"3\":\n",
        "        del tareas[int(input(\"Índice a eliminar: \"))]\n",
        "    elif opcion == \"4\":\n",
        "        break"
